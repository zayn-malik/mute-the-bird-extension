{
    "name": "Mute the bird",
    "description": "Easily mute words by selecting them!",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "contextMenus",
        "cookies"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/minus-circle16.png",
            "32": "images/minus-circle32.png",
            "48": "images/minus-circle48.png"
        }
    },
    "icons": {
        "16": "images/minus-circle16.png",
        "32": "images/minus-circle32.png",
        "48": "images/minus-circle48.png",
        "128": "images/minus-circle128.png"
    },
    "host_permissions": [
        "https://twitter.com/*",
        "https://api.twitter.com/*"
    ],
    "options_page": "options/options.html"
}